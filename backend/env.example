# Режим разработки
NODE_ENV=development
PORT=3001

# База данных (для будущего использования)
DATABASE_URL=postgresql://localhost:5432/dino_game_dev
USE_MEMORY_DB=true

# Telegram Bot API
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_APP_URL=https://your-domain.com

# JWT секрет для аутентификации
JWT_SECRET=your_super_secret_jwt_key_here

# TON Space (для будущей интеграции)
TON_SPACE_API_KEY=your_ton_space_api_key

# Безопасность
RATE_LIMIT_MAX=100
DAILY_COIN_LIMIT=100
MAX_POINTS_PER_RUN=30000

# CORS настройки
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# Логирование
LOG_LEVEL=info
LOG_FILE=logs/app.log

# WebSocket настройки
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

